{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      // requires Ruby plugin (so 'config:ruby.interpreter.commandPath' has a value)
      "label": "Execute Ruby Script",
      "type": "shell",
      "group": "build",
      "command": "${config:ruby.interpreter.commandPath}",
      "args": [
        "${file}"
      ],
      "osx": {
        // OS X specific stuff here
      },
      "linux": {
        // Linux specific stuff here
      },
      "windows": {
        // Windows specific stuff here
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    // ... TODO: Other build tasks go here.
    // To run a task:
    //   * Open Command Palette
    //   * Type "Tasks"
    //   * Select "Tasks: Run Task"
    //   * Select the task you wish to run`
  ]
}